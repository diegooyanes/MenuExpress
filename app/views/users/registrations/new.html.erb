<div class="auth-shell">
  <div class="auth-card">
    <div class="auth-panel">
      <div>
        <p class="hero-kicker">MenuExpress</p>
        <h2>Crea tu cuenta de usuario</h2>
        <p>Reserva y deja reseñas con tu perfil.</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
        <%= render "restaurants/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, "Nombre" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <small class="text-muted">Mínimo <%= @minimum_password_length %> caracteres</small>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Crear cuenta", class: "btn btn-primary" %>
          <%= link_to "Volver al inicio", restaurants_path, class: "btn btn-secondary" %>
        </div>
      <% end %>

      <div class="auth-links">
        <%= render "users/shared/links" %>
      </div>
    </div>

    <div class="auth-aside">
      <div>
        <h3>Tu experiencia personalizada</h3>
        <p class="text-muted">Reseñas reales y reservas rápidas.</p>
      </div>
      <ul>
        <li>Perfil verificado</li>
        <li>Reservas seguras</li>
        <li>Notificaciones de confirmación</li>
      </ul>
      <span class="pill">Cuenta gratuita</span>
    </div>
  </div>
</div>
