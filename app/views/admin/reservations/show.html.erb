<div class="admin-dashboard">
  <div class="restaurant-header">
    <div>
      <p class="hero-kicker">Reserva</p>
      <h1><%= @reservation.full_name %></h1>
      <p class="text-muted"><%= @restaurant.name %></p>
    </div>
    <div class="restaurant-header-actions">
      <%= link_to "Editar estado", edit_admin_restaurant_reservation_path(@restaurant, @reservation), class: "btn btn-primary" %>
      <%= link_to "Volver", admin_restaurant_reservations_path(@restaurant), class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="module-card">
    <p><strong>Fecha y hora:</strong> <%= @reservation.reserved_datetime.strftime("%d/%m/%Y %H:%M") %></p>
    <p><strong>Personas:</strong> <%= @reservation.number_of_guests %></p>
    <p><strong>Telefono:</strong> <%= @reservation.phone_number %></p>
    <p><strong>Estado:</strong> <span class="badge badge-<%= @reservation.status %>"><%= @reservation.status.humanize %></span></p>
  </div>
</div>
