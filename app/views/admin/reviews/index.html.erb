<div class="admin-dashboard">
  <div class="restaurant-header">
    <div>
      <p class="hero-kicker">Resenas</p>
      <h1>Opiniones de <%= @restaurant.name %></h1>
      <p class="text-muted">Gestiona la reputacion de tu restaurante.</p>
    </div>
    <div class="restaurant-header-actions">
      <%= link_to "Ver restaurante", restaurant_path(@restaurant), class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="module-card">
    <% if @reviews.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Cliente</th>
            <th>Puntuacion</th>
            <th>Comentario</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.name %></td>
              <td>â˜… <%= review.rating %></td>
              <td><%= truncate(review.comment, length: 80) %></td>
              <td>
                <%= link_to "Ver", admin_restaurant_review_path(@restaurant, review), class: "btn btn-secondary btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="empty-message">Aun no tienes resenas.</p>
    <% end %>
  </div>
</div>
