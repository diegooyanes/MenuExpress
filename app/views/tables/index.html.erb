<div class="container">
  <div class="dashboard-header">
    <div>
      <p class="hero-kicker">Mesas</p>
      <h1><%= @restaurant.name %></h1>
      <p class="text-muted">Capacidad y disponibilidad de mesas.</p>
    </div>
    <div class="dashboard-actions">
      <%= link_to "Volver al restaurante", restaurant_path(@restaurant), class: "btn btn-secondary" %>
    </div>
  </div>

  <% if @tables.any? %>
    <div class="module-card">
      <table class="table">
        <thead>
          <tr>
            <th>Mesa</th>
            <th>Capacidad</th>
            <th>Disponible</th>
          </tr>
        </thead>
        <tbody>
          <% @tables.each do |table| %>
            <tr>
              <td>Mesa <%= table.number %></td>
              <td><%= table.capacity %> personas</td>
              <td><%= table.available? ? "Si" : "No" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="empty-message">Este restaurante aun no tiene mesas registradas.</p>
  <% end %>
</div>
